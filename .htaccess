# ========================================
# .htaccess SIMPLIFICADO - Dr. Massuca
# Para resolver erros de CSP com Google Analytics
# ========================================

# Remove qualquer Content Security Policy existente
<IfModule mod_headers.c>
    Header unset Content-Security-Policy
    Header unset X-Content-Security-Policy
    
    # CSP permissivo para Google Analytics funcionar
    Header set Content-Security-Policy "default-src * 'unsafe-inline' 'unsafe-eval' data: blob:;"
    
    # Headers de segurança básicos
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Rewrite para SPA
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>

# Cache básico
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json
</IfModule>

# Charset UTF-8
AddDefaultCharset UTF-8

# MIME types
AddType application/javascript .js
AddType application/json .json
AddType application/manifest+json .webmanifest
AddType image/webp .webp